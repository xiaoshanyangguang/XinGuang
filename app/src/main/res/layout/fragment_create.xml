<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:titlebar="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.wuhenzhizao.titlebar.widget.CommonTitleBar
        android:id="@+id/titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        titlebar:centerText="@string/create_plan"
        titlebar:statusBarColor="@color/color_title"
        titlebar:centerType="textView"
        titlebar:titleBarColor="@color/color_title"
        titlebar:leftType="textView" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/tartget_plan"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/tartget_plan2"/>

    <Button
        android:id="@+id/bt_create_jump"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/create_plan"
        android:textColor="@color/colorAccent"/>

</LinearLayout>